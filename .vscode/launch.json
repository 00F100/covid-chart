{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "CAPTURE (POC)",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/api/poc/extractor.js",
      "args": [
        "brazil",
        "1"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "web server (POC)",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/api/poc/server.js"
    },
    {
      "name": "API Web server (TypeScript)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/api/node_modules/ts-node/dist/bin.js",
      "args": [
        "${workspaceRoot}/api/src/bootstrap/web"
      ],
      "cwd": "${workspaceRoot}/api/src",
      "protocol": "inspector",
      "envFile": "${workspaceFolder}/api/.env", 
      "outputCapture": "std"
    },
    {
      "name": "API Web server (NodeJS)",
      "type": "node",
      "request": "launch",
      // "program": "${workspaceRoot}/api/node_modules/ts-node/dist/bin.js",
      "args": [
        "${workspaceRoot}/api/dist/bootstrap/web.js"
      ],
      "cwd": "${workspaceRoot}/api/dist",
      "protocol": "inspector",
      "envFile": "${workspaceFolder}/api/.env", 
      "outputCapture": "std"
    },
    {
      "name": "Handle (TypeScript)",
      "type": "node",
      "request": "launch",
      "outputCapture": "std",
      "program": "${workspaceRoot}/api/node_modules/ts-node/dist/bin.js",
      "args": [
        "${workspaceRoot}/api/src/bootstrap/handler",
        "extract",
        "1"
      ],
      "cwd": "${workspaceRoot}/api/src",
      "protocol": "inspector",
      "envFile": "${workspaceFolder}/api/.env",
      "console": "internalConsole", 
      "outputCapture": "std"
    }
  ]
}